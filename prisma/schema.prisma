// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(cuid())
  name          String
  email         String  @unique
  role          String  // 'admin' or 'seller'
  salespersonId Int?    // ID used locally (1, 2, 3, 4)
  sales         Sale[]  @relation("SalesOwner")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Sale {
  id            String   @id @default(cuid())
  clientName    String
  value         Float
  stage         String   // 'cadastro', 'negociacao', 'fechamento', 'acompanhamento'
  salespersonId Int      // Numeric ID for visual tracking (1, 2, 3, 4)
  description   String   @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  owner         User     @relation("SalesOwner", fields: [ownerId], references: [id])
  ownerId       String
}

model GeneralGoal {
  id        String   @id @default(cuid())
  value     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
